<?xml version="1.0" encoding="utf-8"?>
<resources>

    <item name="progressbar_ando_dialog_loading" type="id" />
    <item name="iv_ando_dialog_loading" type="id" />
    <item name="tv_ando_dialog_loading_text" type="id" />

    <string name="str_ando_dialog_loading_text">加载中…</string>

    <color name="color_ando_dialog_theme">#23ADE5</color>
    <color name="color_ando_dialog_theme_dark">#CC23ADE5</color>
    <color name="color_ando_dialog_loading_progress">#DEDEDE</color>
    <color name="color_ando_dialog_loading_progress_end">@color/color_ando_dialog_theme_dark</color>

    <color name="color_ando_dialog_white">#FFFFFFFF</color>
    <color name="color_ando_dialog_black">#00000000</color>

    <style name="CustomDialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@drawable/rectangle_ando_dialog_loading_bg
        </item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:backgroundDimAmount">0.5</item>

        <!--  From Base.V7.Theme.AppCompat.Dialog -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>

        <item name="android:listDivider">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="BottomDialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@drawable/rectangle_ando_dialog_loading_bg</item>
    </style>

    <!-- ==================== LoadingDialog中ProgressBar、ImageView和文字样式 ==================== -->
    <!--  -->
    <dimen name="dimen_ando_dialog_loading_width">150dp</dimen>
    <dimen name="dimen_ando_dialog_loading_height">108dp</dimen>
    <dimen name="dimen_ando_dialog_loading_radius">5dp</dimen>
    <color name="color_ando_dialog_loading_bg">#80000000</color>
    <drawable name="drawable_ando_dialog_loading_png">@drawable/ic_ando_dialog_loading</drawable>

    <style name="AndoDialogLoadingProgressBarStyle">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:indeterminateDrawable">@drawable/rotate_ando_dialog_loading</item>
        <item name="android:indeterminateDuration">1300</item>
        <item name="android:indeterminateTint">@android:color/white</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="AndoDialogLoadingImageViewStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_ando_dialog_loading_circle</item>
    </style>

    <style name="AndoDialogLoadingTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:text">@string/str_ando_dialog_loading_text</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- ======================================================================== -->

</resources>