<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/id_ando_bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@drawable/bg_bottom_sheet_dialog_fragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/id_ando_bottom_sheet_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:fastScrollEnabled="false" />

    <FrameLayout
        android:id="@id/id_ando_bottom_sheet_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/id_ando_bottom_sheet_close_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/modalBottomClose"
            android:textColor="@color/modalBottomItemTextColor"
            android:textSize="@dimen/modalBottomItemTextSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/modalBottomDividerColor" />
    </FrameLayout>

</LinearLayout>