<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="always"
    tools:context="ando.dialog.sample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/dimen_ando_dialog_loading_width"
            android:layout_height="@dimen/dimen_ando_dialog_loading_height"
            android:layout_marginTop="5dp"
            android:background="#CC23ADE5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Width: 150dp \nHeight: 106dp"
                android:textColor="@color/white" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Dialog"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="#ABABAB" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_loading_by_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中弹窗(LoadingDialog)\nProgressBar + Shape"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_loading_by_progressbar_bg_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中弹窗(LoadingDialog)\nProgressBar + png"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_loading_by_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中弹窗(LoadingDialog)\nImageView + AnimationUtils"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="DialogFragment"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="#ABABAB" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dialog_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简单用法(Simple usage)"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dialog_fragment_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期/时间选择器(DateTimePicker)"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Others"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="#ABABAB" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dialog_replace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="替换弹窗(replaceDialog)"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dialog_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="底部弹窗(BottomDialog)"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dialog_configuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋屏测试(Rotating Screen Test)"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dialog_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入框(EditText)"
            android:textAllCaps="false" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>