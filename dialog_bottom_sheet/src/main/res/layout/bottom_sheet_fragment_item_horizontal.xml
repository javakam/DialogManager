<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/modalBottomItemPadding"
    tools:ignore="UnusedAttribute">

    <ImageView
        android:id="@id/id_ando_bottom_sheet_item_icon"
        android:layout_width="@dimen/modalBottomItemImageSize"
        android:layout_height="@dimen/modalBottomItemImageSize"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        tools:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@id/id_ando_bottom_sheet_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/modalBottomItemTextColor"
        android:textSize="@dimen/modalBottomItemTextSize"
        tools:text="Item title" />

</LinearLayout>